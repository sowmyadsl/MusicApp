<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shijujohn.musicapp.SettingsActivity">

    <ImageView
        style="@style/background_image_style"
        android:src="@drawable/music_background" />

    <RelativeLayout
        style="@style/layout_style"
        android:layout_height="match_parent">

        <TextView
            style="@style/descr_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/descr_settings" />

        <Button
            android:id="@+id/button_now_playing_return"
            style="@style/home_buttons"
            android:layout_alignParentBottom="true"
            android:text="@string/now_playing_button_text" />
    </RelativeLayout>
</FrameLayout>
